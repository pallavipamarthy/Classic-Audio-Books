<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/catalog_cardview_height"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/book_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/catalog_image_view_height"
        android:background="@mipmap/default_placeholder" />

    <TextView
        android:id="@+id/book_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="bottom|center"
        android:gravity="center"
        android:lines="2"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        android:textSize="14sp" />
</android.support.v7.widget.CardView>