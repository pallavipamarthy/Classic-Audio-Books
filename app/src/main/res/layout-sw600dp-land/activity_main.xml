<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#e2e0e2"
                app:cardElevation="3dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/romance_on_click_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:drawableEnd="@drawable/arrow_right_black_24dp"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:text="@string/romance_genre_title"
                        android:textSize="@dimen/genre_heading_text_size"
                        android:textStyle="bold" />

                    <com.github.silvestrpredko.dotprogressbar.DotProgressBar
                        android:id="@+id/progress_bar1"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        app:endColor="@color/colorPrimary"
                        app:startColor="@color/colorPrimaryDark"
                        custom:amount="5"
                        custom:animationDirection="left"
                        custom:duration="@android:integer/config_mediumAnimTime" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/romance_on_click_view"
                        android:layout_marginTop="5dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#e2e0e2"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/comedy_on_click_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:drawableEnd="@drawable/arrow_right_black_24dp"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:text="@string/comedy_genre_title"
                        android:textSize="@dimen/genre_heading_text_size"
                        android:textStyle="bold" />

                    <com.github.silvestrpredko.dotprogressbar.DotProgressBar
                        android:id="@+id/progress_bar2"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        app:endColor="@color/colorPrimary"
                        app:startColor="@color/colorPrimaryDark"
                        custom:amount="5"
                        custom:animationDirection="left"
                        custom:duration="@android:integer/config_mediumAnimTime" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/comedy_on_click_view"
                        android:layout_marginTop="5dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="#e2e0e2"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/drama_on_click_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:drawableEnd="@drawable/arrow_right_black_24dp"
                        android:gravity="center"
                        android:text="@string/drama_genre_title"
                        android:textSize="@dimen/genre_heading_text_size"
                        android:textStyle="bold" />

                    <com.github.silvestrpredko.dotprogressbar.DotProgressBar
                        android:id="@+id/progress_bar3"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        app:endColor="@color/colorPrimary"
                        app:startColor="@color/colorPrimaryDark"
                        custom:amount="5"
                        custom:animationDirection="left"
                        custom:duration="@android:integer/config_mediumAnimTime" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/drama_on_click_view"
                        android:layout_marginTop="5dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/general_fiction_on_click_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#3d9199"
                    app:cardElevation="3dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/fiction_image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:drawableEnd="@drawable/genres_right_arrow_white"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:text="@string/general_fiction_text"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/genre_heading_text_size"
                        android:textStyle="bold" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/crime_mystery_on_click_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#a02914"
                    app:cardElevation="3dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/crime_image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:drawableEnd="@drawable/genres_right_arrow_white"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:text="@string/crime_mystery_text"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/genre_heading_text_size"
                        android:textStyle="bold" />

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="60dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/horror_supernatural_click_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#3a2020"
                    app:cardElevation="3dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/horror_image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:drawableEnd="@drawable/genres_right_arrow_white"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:text="@string/horror_supernatural_text"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/genre_heading_text_size"
                        android:textStyle="bold" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/fantasy_on_click_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#70a57f"
                    app:cardElevation="3dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/fantasy_image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:drawableEnd="@drawable/genres_right_arrow_white"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:text="@string/fantasy_text"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/genre_heading_text_size"
                        android:textStyle="bold" />

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/bottom_navigation" />

</RelativeLayout>